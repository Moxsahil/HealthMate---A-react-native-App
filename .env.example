# HealthMate Environment Configuration
# Copy this file to .env and update with your actual values

# ====================================================================
# FIREBASE CONFIGURATION (Optional - for production)
# ====================================================================
# Get these values from Firebase Console > Project Settings > Web app
EXPO_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key-here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdefghijk123456

# ====================================================================
# APP CONFIGURATION
# ====================================================================
EXPO_PUBLIC_APP_NAME=HealthMate
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_APP_ENVIRONMENT=development

# ====================================================================
# DEVELOPMENT SETTINGS
# ====================================================================
EXPO_PUBLIC_DEV_MODE=true
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_MOCK_DATA=true

# ====================================================================
# HEALTH DATA APIS (Future Implementation)
# ====================================================================
# Google Fit API
EXPO_PUBLIC_GOOGLE_FIT_CLIENT_ID=your-google-client-id
EXPO_PUBLIC_GOOGLE_FIT_API_KEY=your-google-api-key

# Apple Health (iOS only)
EXPO_PUBLIC_APPLE_HEALTH_ENABLED=false

# ====================================================================
# NOTIFICATION SERVICES
# ====================================================================
# For production push notifications
EXPO_PUBLIC_PUSH_NOTIFICATIONS_ENABLED=true

# ====================================================================
# ANALYTICS & MONITORING (Optional)
# ====================================================================
# Google Analytics / Firebase Analytics
EXPO_PUBLIC_ANALYTICS_ENABLED=false
EXPO_PUBLIC_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry for error tracking (optional)
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-here

# ====================================================================
# API ENDPOINTS (Future Implementation)
# ====================================================================
# Backend API base URL
EXPO_PUBLIC_API_BASE_URL=https://api.healthmate.app
EXPO_PUBLIC_API_TIMEOUT=30000

# Food database API (for nutrition tracking)
EXPO_PUBLIC_FOOD_API_KEY=your-food-api-key
EXPO_PUBLIC_FOOD_API_URL=https://api.nutritionix.com/v2

# ====================================================================
# FEATURE FLAGS
# ====================================================================
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_ENABLE_SOCIAL_LOGIN=true
EXPO_PUBLIC_ENABLE_PREMIUM_FEATURES=false
EXPO_PUBLIC_ENABLE_AI_INSIGHTS=false